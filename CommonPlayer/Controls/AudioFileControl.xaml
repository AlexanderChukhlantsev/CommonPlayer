<UserControl x:Class="CommonPlayer.Controls.AudioFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:chrome="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
             xmlns:local="clr-namespace:CommonPlayer"
             xmlns:vm="clr-namespace:CommonPlayer.ViewModels"
             mc:Ignorable="d"
             
             MinWidth="410"
             MinHeight="120"
             
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             
             d:DataContext="{d:DesignInstance Type=vm:AudioFileViewModel, IsDesignTimeCreatable=False}">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="10"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="10"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="10"/>
    </Grid.RowDefinitions>


    <Image Grid.Column="0"
           Grid.Row="0"
           Stretch="UniformToFill"/>
  </Grid>
</UserControl>
